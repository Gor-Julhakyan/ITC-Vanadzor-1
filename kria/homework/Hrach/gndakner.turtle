kturtle-script-v1.0
@(reset)
@(sh)
$k=0
$n=0
@(while) ( $n<3 ) @(or) ( $n>100 ) {
  $n=@(ask) "Ներմուծիր գնդակների քանակը(3-100)"
}
@(while) ( $k<2 ) @(or) ( $k>$n ) {
  $k=@(ask) "Ներմուծիր 1 քայլով մաքսիմալ գնդակներ հանելու քանակը(2-գնդակների քանակ)"
}
$l=($n-1)/($k+1)
$l1=@(round) ($l)
@(if) ( $l1>$l ) {
  $l1=$l1-1
}
$s1=0
$s2=0
$m=$n-$s1-$s2
@(learn) arkxner {
  @(dir) 180
  @(fw) 200
  @(go) 0@(,) 200
  @(dir) 90
  @(fw) 400
}
@(learn) circle {
  @(dir) 0
  @(go) 2@(,) 193
  @(repeat) $m {
    @(repeat) 180 {
      @(fw) 0.2
      @(tr) 2
    }
    @(gox) @(getx)+15
    @(if) ( @(getx)>380){
      @(gox) 2
      @(goy) @(gety)-13
    }
  }
}
@(learn) circle1 {
  @(dir) 0
  @(go) 2@(,) 393
