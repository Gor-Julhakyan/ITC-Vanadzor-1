@(learn) gcel {
@(reset)
@(sh)
arkxner
circle
circle1
circle2
}
gcel
@(if) ( $l!=$l1){
  $s=$l1
  @(while) ( @(true) ){
    $n1=$m-$s*($k+1)-1
    $s1=$s1+$n1
    $m=$n-$s1-$s2
    gcel
    $s=$s-1
    $n2=0
    @(while) ( $n2<1 ) @(or) ( $n2>$k ) @(or) ( $n2>$m ){
      $n2=@(ask) "ներմուծեք թե քանի գնդակ եք ուզում հանել(1-k)"
    }
    $s2=$s2+$n2
    $m=$n-$s1-$s2 
    gcel
    @(if) ( $m==0 ){
      @(break)
    }
  }
} @(else) {
  $s=$l1-1
  @(while) ( @(true) ){
    $n1=0
    $n2=0
    @(while) ( $n1<1 ) @(or) ( $n1>$k ) @(or) ( $n2>$m ){
      $n1=@(ask) "ներմուծեք թե քանի գնդակ եք ուզում հանել(1-k)"
      }
    $s1=$s1+$n1
    $m=$n-$s1-$s2
    gcel
    @(if) ( $m==0 ){
      @(break)
    }
    $n2=$m-$s*($k+1)-1
    $s2=$s2+$n2
    $m=$n-$s1-$s2
    gcel
    $s=$s-1
  }
}
